import json
from pathlib import Path

DATA_FILE = Path("my_tasks.json")

def load_task_data():
    if DATA_FILE.exists():
        with open(DATA_FILE, "r") as file:
            return json.load(file)
    return []

def save_task_data(tasks):
    with open(DATA_FILE, "w") as file:
        json.dump(tasks, file, indent=2)

def create_task(tasks):
    title = input("Task title: ")
    details = input("Details/Description: ")
    due_date = input("Due date (YYYY-MM-DD): ")
    tasks.append({"title": title, "details": details, "deadline": due_date, "done": False})
    save_task_data(tasks)
    print(f"‚úÖ Added: {title}")

def display_tasks(tasks):
    if not tasks:
        print("No tasks to show.")
        return
    for idx, task in enumerate(tasks, start=1):
        status = "‚úÖ Completed" if task["done"] else "‚è≥ Pending"
        print(f"{idx}. {task['title']} - {status}")
        print(f"   Description: {task['details']}")
        print(f"   Deadline: {task['deadline']}")

def mark_task_done(tasks):
    display_tasks(tasks)
    try:
        choice = int(input("Which task number is complete? ")) - 1
        tasks[choice]["done"] = True
        save_task_data(tasks)
        print(f"üéØ Task '{tasks[choice]['title']}' marked as done.")
    except (IndexError, ValueError):
        print("‚ö† Invalid selection.")

def remove_task(tasks):
    display_tasks(tasks)
    try:
        choice = int(input("Which task do you want to delete? ")) - 1
        removed = tasks.pop(choice)
        save_task_data(tasks)
        print(f"üóë Deleted: {removed['title']}")
    except (IndexError, ValueError):
        print("‚ö† Invalid selection.")

def main_menu():
    task_list = load_task_data()
    while True:
        print("\n--- TO-DO LIST MENU ---")
        print("1Ô∏è‚É£ Add Task")
        print("2Ô∏è‚É£ View Tasks")
        print("3Ô∏è‚É£ Mark Task Complete")
        print("4Ô∏è‚É£ Delete Task")
        print("5Ô∏è‚É£ Exit")
        choice = input("Choose an option: ")

        if choice == "1":
            create_task(task_list)
        elif choice == "2":
            display_tasks(task_list)
        elif choice == "3":
            mark_task_done(task_list)
        elif choice == "4":
            remove_task(task_list)
        elif choice == "5":
            print("üëã Goodbye!")
            break
        else:
            print("‚ö† Please select a valid option.")

if __name__ == "__main__":
    main_menu()
